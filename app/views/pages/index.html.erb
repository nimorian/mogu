<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Novel</th>
      <th>Title</th>
      <th>Body</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.novel_id %></td>
      <td><%= page.title %></td>
      <td><%= page.body %></td>
      <td><%= page.status %></td>
      <td><%= link_to 'Show', page %></td>
      <td><%= link_to 'Edit', edit_page_path(page) %></td>
      <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

